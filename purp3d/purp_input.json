    },
    "Get Mouse X": {
        "prefix": "purp.input.get_mouse_x",
        "body": "purp.input.get_mouse_x()",
        "description": "Get mouse X position"
    },
    "Get Mouse Y": {
        "prefix": "purp.input.get_mouse_y",
        "body": "purp.input.get_mouse_y()",
        "description": "Get mouse Y position"
    }
